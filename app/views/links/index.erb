<h1> Links </h1>

<ul id= "links">
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url %>
      <% if link.tags.empty? == false %>
        Tags:  <%= link.tags.map(&:name) %>
      <% else %>
      <% end %>
    </li>
  <% end %>
</ul>

<a href="/links/new">Add link</a>
